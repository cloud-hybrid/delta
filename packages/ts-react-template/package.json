{
    "name": "@cloud-technology/ts-config-template",
    "version": "0.1.116",
    "scripts": {
        "start": "exec scripts/start",
        "build": "exec scripts/build",
        "eject": "exec scripts/eject",
        "install": "chmod a+x ./scripts/*",
        "analyze": "exec scripts/anaylze",
        "npm-help": "exec scripts/help",
        "validate": "exec scripts/valid"
    },
    "dependencies": {
        "buffer": "^6.0.3",
        "history": "^5.2.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router-dom": "^6.2.1",
        "react-use-websocket": "^3.0.0",
        "xterm": "^4.17.0",
        "xterm-addon-fit": "^0.5.0",
        "xterm-addon-web-links": "^0.5.1"
    },
    "devDependencies": {
        "@babel/plugin-transform-typescript": "^7.16.8",
        "@babel/preset-typescript": "^7.16.7",
        "@types/node": "^17.0.18",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "env-cmd": "^10.1.0",
        "gh-pages": "^3.2.3",
        "prop-types": "^15.8.1",
        "react-scripts": "^5.0.0",
        "sass": "^1.45.1",
        "source-map-explorer": "^2.5.2",
        "typescript": "^4.5.5",
        "web-vitals": "^2.1.4"
    },
    "config": {
        "duration": 1000
    },
    "homepage": ".",
    "browserslist": [
        "last 1 version"
    ],
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "react-app",
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
            "no-case-declarations": 0,
            "@typescript-eslint/no-explicit-any": 0,
            "@typescript-eslint/explicit-function-return-type": 0,
            "@typescript-eslint/no-use-before-define": 0,
            "@typescript-eslint/no-empty-interface": 0,
            "@typescript-eslint/explicit-module-boundary-types": 0,
            "@typescript-eslint/no-empty-function": 0,
            "@typescript-eslint/no-unused-vars": 0,
            "@typescript-eslint/no-inferrable-types": 0,
            "@typescript-eslint/ban-types": 0,
            "@typescript-eslint/ban-ts-comment": 0,
            "no-sequences": "error"
        },
        "ignorePatterns": [
            "ci",
            "dist",
            "coverage",
            "distribution",
            "node_modules"
        ]
    }
}
